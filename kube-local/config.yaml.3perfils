singleuser:
  defaultUrl: "/lab"
  memory:
    limit: 4G
    guarantee: 4G
  cpu:
    limit: 4
    guarantee: 2
  uid: 0
  extraEnv:
    CHOWN_HOME: 'yes'
    CHOWN_HOME_OPTS: '-R'
    DOCKER_HOST: 'tcp://localhost:2375'
    GRANT_SUDO: "yes"
    NOTEBOOK_ARGS: "--allow-root"
    SUDOERS_ALL: "true"
  storage:
    extraVolumes:
      - name: shm-volume
        emptyDir:
          medium: Memory
      - name: docker-sock-{username}
        emptyDir: {}
      - name: docker-data
        persistentVolumeClaim:
          claimName: dockerdata-claim
      - name: apps
        persistentVolumeClaim:
          claimName: apps-claim
      - name: dbdata
        persistentVolumeClaim:
          claimName: dbdata-claim
      - name: conda-envs
        persistentVolumeClaim:
          claimName: conda-envs-claim
      - name: nbgrader-exchange
        persistentVolumeClaim:
          claimName: exchange-claim
    extraVolumeMounts:
      - name: shm-volume
        mountPath: /dev/shm
      - name: docker-data
        mountPath: /var/lib/docker
      - name: apps
        mountPath: /opt/apps
      - name: dbdata
        mountPath: /opt/dbdata
      - name: conda-envs
        mountPath: /opt/conda/envs
      - name: nbgrader-exchange
        mountPath: /usr/local/share/nbgrader/exchange 
      - name: docker-sock-{username}
        mountPath: /run
    homeMountPath: /home/{username}
    dynamic:
      storageClass: hostpath 
    capacity: 20Gi
  image:
    name: entorn-io/singleuser-dev 
    tag: 0.1.0
    pullPolicy: IfNotPresent
  profileList:
    - display_name: "Entorn DEV"
      description: "Entorn de desenvolupament de programari"
      kubespawner_override:
        extra_containers:
          - name: docker
            image: entorn-io/dind:0.1.0
            imagePullPolicy: IfNotPresent
            env:
              - name: DOCKER_TLS_CERTDIR
                value: ''
            securityContext: 
              privileged: true 
            volumeMounts: 
              - name: docker-data
                mountPath: /var/lib/docker 
              - name: volume-{username}
                mountPath: /home/{username}
              - name: docker-sock-{username}
                mountPath: /run
              - name: dbdata
                mountPath: /opt/dbdata                
        security_context:
          privileged: true
          fsGroup: 100
    - display_name: "Entorn BIO"
      description: "Entorn de Data Science, BioInform√†tica i Big Data"
      kubespawner_override:
        image: entorn-io/singleuser-data:0.1.0
        extra_containers:
          - name: docker
            image: entorn-io/dind:0.1.0
            imagePullPolicy: IfNotPresent
            env:
              - name: DOCKER_TLS_CERTDIR
                value: ''
            securityContext:
              privileged: true
            volumeMounts:
              - name: docker-data
                mountPath: /var/lib/docker
              - name: volume-{username}
